                    <label for="body">Body</label>
                    <textarea class="form-control" placeholder="Body" id="body" name="content"></textarea>
                    
              </div>
            
                <div class="mb-3">
                    <label for="coverImage">UploadImage</label>
                    <input type="file" class="form-control" id="coverImage" name="coverImage" name="title" aria-describedby="coverImage">
                    
              </div>
              <div class="mb-3">
            
                <button class="btn btn-primary" type="submit">Submit</button>
                
                </div>

            </form>
        </div>



